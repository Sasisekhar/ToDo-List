<html>
<head>
    <title> ToDo </title>
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <meta name='viewport' content='width=device-width, height=device-height, initial-scale=1, user-scalable=no'/>
</head>
<body>
    <div class="container">
            <h1 id="Title">
                <span id="currentList"> <%= currentList %> </span>
                <button onclick="edit()" class="button_title">
                    <span class="material-symbols-outlined">edit</span>
                </button>
                <a href="/load?index=<%= currentList %>" class="load_title">
                    <span class="material-symbols-outlined">file_open</span>
                </a>
                <button onclick="saveas()" class="button_title" id="saveas">
                    <span class="material-symbols-outlined">save</span>
                </button>
            </h1>
            <div class="hamburger-menu">
                <input id="menu__toggle" type="checkbox"/>
                <label class="menu__btn" for="menu__toggle">
                    <span></span>
                </label>
            
                <ul class="menu__box" class="todoList">
                    <button onclick="refreshList()" class="button" id="refreshButton">Refresh List</button>
                    <% for( var i = 0; i < saved.length; i++){ %>
                        <li class="listItem">
                            <span class="listItemName"> <%= saved[i] %> </span>
                            <a href="/load?index=<%= i %>" class="load">
                                <span class="material-symbols-outlined">file_open</span>
                            <a href="/delete?index=<%= i %>" class="delete">
                                <span class="material-symbols-outlined">delete</span>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        <div class="textBoxContainer">
            <form action="/" method="post" autocomplete="off">
                <input class="textBox" type="text" name="newtask" placeholder="add new task">
                <button class="button" formaction ="/addtask" type="submit"> Add Task </button>
            </form>
        </div>
        <div class="listContainer">
            <div>
                <h2> Added Task </h2>
                <ul class="todoList">
                    <% for( var i = 0; i < task.length; i++){ %>
                        <li class="listItem">
                            <span class="listItemName"> <%= task[i] %> </span>
                            <a href="/completetask?index=<%= i %>" class="complete">
                                <span class="material-symbols-outlined">done</span>
                            </a>
                            <a href="/removetask?index=<%= i %>" class="remove">
                                <span class="material-symbols-outlined">close</span>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
            <div>
                <h2> Completed Task </h2>
                <ul class="todoList">
                    <% for( var i = 0; i < complete.length; i++){ %>
                        <li class="listItem">
                            <span class="listItemName"> <%= complete[i] %> </span>
                            <a href="/reverttask?index=<%= i %>" class="revert">
                                <span class="material-symbols-outlined">undo</span>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
    <script src="js/view.js"></script>
</body>
</html>